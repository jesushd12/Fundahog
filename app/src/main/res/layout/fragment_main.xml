<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="#4DE0EE">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/treatment_button"
                    android:scaleType="fitCenter"
                    android:background="@drawable/boton_rectangular"
                    android:src="@drawable/ic_calendario"
                    android:textAlignment="textEnd"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tratamientos"
                    android:id="@+id/textView23"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"
                    android:textSize="24sp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:background="#8A52B1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/boton_notas"
                    android:background="@drawable/boton_rectangular_notas"
                    android:src="@drawable/ic_diario"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Notas"
                    android:id="@+id/textView24"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:background="#00B49B">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_examen"
                    android:src="@drawable/ic_examenes"
                    android:scaleType="fitCenter"
                    android:background="@drawable/boton_rectangular_examen"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Examenes"
                    android:id="@+id/textView25"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:background="#F74281">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_informacion"
                    android:background="@drawable/boton_rectangular_informacion"
                    android:src="@drawable/ic_pregunta"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Informacion"
                    android:id="@+id/textView26"
                    android:gravity="center_horizontal"
                    android:textColor="@color/md_white_1000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>